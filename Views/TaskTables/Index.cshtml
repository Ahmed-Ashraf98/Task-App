@model IEnumerable<FBWeb.Models.TaskTable>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TextTask)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTask)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompleteTask)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TextTask)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTask)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompleteTask)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TaskId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TaskId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TaskId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
